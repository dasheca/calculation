<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="20dp">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:padding="20dp"
        android:text="0"
        android:textColor="#475B89"
        android:textSize="80sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <!-- Первый ряд -->
        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onLog"
            android:text="ln"
            android:textColor="#FFFFFF"
            android:textSize="27sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onPower"
            android:text="y\u02E3"
            android:textColor="#FFFFFF"
            android:textSize="27sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onAbs"
            android:text="|x|"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onOperator"
            android:text="÷"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <!-- Второй ряд -->
        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onOperator"
            android:text="×"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <!-- Третий ряд -->
        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onOperator"
            android:text="−"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <!-- Четвертый ряд -->
        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onOperator"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <!-- Пятый ряд -->
        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#B2C3F0"
            android:onClick="onDigit"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onClear"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onDigit"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:backgroundTint="#475B89"
            android:onClick="onEquals"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </GridLayout>

    <Button
        android:id="@+id/btnDocumentation"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:onClick="openDocumentation"
        android:text="Документация" />

</LinearLayout>